# Environment Variables for ProFlow

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_GENAI_USE_VERTEXAI=1

# Gemini API (if not using Vertex AI)
# GOOGLE_API_KEY=your-api-key-here

# Service Account (if using)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Agent Configuration
GEMINI_MODEL=gemini-2.5-flash-lite
MAX_TOKENS=2000
TEMPERATURE=0.7

# MCP Server Configurations (will be set up later)
# GMAIL_MCP_URL=http://localhost:8001
# CALENDAR_MCP_URL=http://localhost:8002
# GDRIVE_MCP_URL=http://localhost:8003

# Development Settings
DEBUG=True
LOG_LEVEL=INFO

# Observability
ENABLE_TRACING=True
ENABLE_LOGGING=True
